extends layout

block content
  h1= title
  p
    a(class='button', href='/books/new') Create New Book
  form 
    input(class='search', type='search', placeholder='Search...')
  table 
    thead 
      tr
        th Title
        th Author
        th Genre
        th Year
    tbody 
      each book in books
        tr
          td 
            a(href='/books/update/' + book.id)= book.title
          td= book.author
          td= book.genre
          td= book.year
