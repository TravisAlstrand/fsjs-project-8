extends layout 

block content 
  h1 Update Book 

  if(errors)
    h2(class='error') OOPS!
    each error in errors
      p(class='error')= error.message

  form(action='/books/update/' + book.id, method='post')
    p 
      label(for='title') Title 
      input(type='text', name='title', id='title', value= book.title)
    p 
      label(for='author') Author
      input(type='text', name='author', id='author', value= book.author)
    p
      label(for='genre') Genre
      input(type='text', name='genre', id='genre', value= book.genre)
    p 
      label(for='year') Year 
      input(type='text', name='year', id='year', value= book.year)
    p
      input(type='submit', value='Update Book')
    p 
      a(class='button', href='/books') Cancel
    br
    p 
      a(class='button-delete', href='/books/' + book.id + '/delete') Delete Book
